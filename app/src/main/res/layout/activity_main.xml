<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainlay"
        android:layout_above="@+id/nav"
     >
    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/nav"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp"
       android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="25dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                android:id="@+id/nigeriansounds"
                android:layout_width="30dp"
                android:layout_marginStart="10dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/nigerianimg"
                >

            </ImageView>
                <ImageView
                    android:id="@+id/pranksounds"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="60dp"
                   android:layout_toEndOf="@+id/nigeriansounds"
                    android:layout_centerVertical="true"
                    android:src="@drawable/prankimg"
                    >

                </ImageView>
                <ImageView
                    android:id="@+id/fvrtsounds"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                   android:layout_marginEnd="60dp"
                    android:layout_toStartOf="@id/settingsounds"
                    android:layout_centerVertical="true"
                    android:src="@drawable/fvrtimg"
                    >

                </ImageView>
                <ImageView
                    android:id="@+id/settingsounds"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                   android:layout_marginEnd="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/settingimg"
                    >

                </ImageView>

            </RelativeLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>